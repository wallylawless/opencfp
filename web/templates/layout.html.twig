<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title>{% block title %}{% endblock %}</title>

    <meta name="description" content="An open-source call for papers management system">
    <meta name="author" content="http://github.com/jcarouth/opencfp">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="assets/css/styles.css" rel="stylesheet">
</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="brand" href="#">OpenCfP</a>
                <div class="nav-collapse collapse">
                    <ul class="nav">
                        <li><a href="/">Home</a></li>
                        <li><a href="https://github.com/jcarouth/opencfp">Github</a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                Account <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                {% if is_granted('ROLE_USER') %}
                                    <li><a href="/logout">{{ 'Logout' }}</a></li>
                                {% else %}
                                    <li><a href="/login">{{ 'Login' }}</a></li>
                                    <li><a href="/signup">{{ 'Register' }}</a></li>
                                {% endif %}
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div id="main" role="main" class="container">
            {% block content %}
            {% endblock %}
        </div>
    </div>

    <script src="{{ app.request.basepath }}/assets/js/scripts.js"></script>
</body>
</html>
